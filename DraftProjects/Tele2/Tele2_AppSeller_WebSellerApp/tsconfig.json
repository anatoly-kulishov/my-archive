{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "esnext",
    "target": "es6",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "paths": {
      "features/*": ["./src/features/*"],
      "api/*": ["./src/api/*"],
      "api": ["./src/api"],
      "common/*": ["./src/common/*"],
      "injectStore": ["./src/injectStore"],
      "uiKit": ["./src/uiKit"],
      "helpers/*": ["./src/helpers/*"],
      "icons": ["./src/uiKit/icons"],
      "styles": ["./src/styles"]
    }
  }
}
